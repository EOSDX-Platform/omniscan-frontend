{
	"compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"jsx": "preserve",
		"lib": [
			"ESNext",
			"DOM"
		],
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"src/**/*.vue",
        "env.d.ts"
    ],
	"exclude": [
		"node_modules",
		"dist",
		"dist-ssr",
		"coverage",
		"cypress"
    ]
}